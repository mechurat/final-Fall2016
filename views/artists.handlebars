<div class="row">
  <div class="columns">
    <h1 class="text-center">Artists</h1>
  </div>
</div>
<hr>
<div class="row">
  {{#each artists}}
    <div class="medium-6 large-4 columns">
      {{#if imageFileName}}
        <a href="artists/{{firstName}}{{lastName}}">
          <img class="artist-image" alt="" src="../uploads/{{imageFileName}}">
        </a>
      {{/if}}
      <h5 class="text-center">{{firstName}} {{lastName}} - <small>Tattooing since {{startDate}}</small></h4>
        <hr>
        <p class="text-center">{{bio}}</p>
    </div>
  {{/each}}
</div>
