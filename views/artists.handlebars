<div class="row">
  <div class="columns">
    <h1 class="text-center">Artists</h1>
  </div>
</div>

{{#each artists}}
  <div class="row">
    <div class="medium-6 large-4">
      <a href="artists/{{firstName}}{{lastName}}">
        <img class="artist-image" alt="" src="../upload/{{firstName}}{{lastName}}.jpg">
      </a>
      <h4 class="text-center">{{firstName}} {{lastName}} - <small>Tattooing since {{startDate}}</small></h4>
      <hr>
      <p class="text-center">{{bio}}</p>
    </div>
  </div>
{{/each}}
